                @await RenderSectionAsync("scripts", required:false)
                @await Component.InvokeAsync("NToastNotify")
            </div>
        </div>
    </div>

    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/design/template/assets/js/design.js"></script>
